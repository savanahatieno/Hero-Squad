{{#partial "content"}}
    <section class="landing-pg">
        <div class="land-left"></div>
        <div class="land-right"></div>

        <div class = "squad">
            <div id = "newMember">
               <h2>Choose Squad Members</h2>
                {{#each heroes}}
                    <div class = "hero-cards">
                        <img src="#" alt="">
                        <div class = "hero-detail">
                            <p>Name: {{ name }}</p>
                            <p>Powers: {{ power }} </p>

                            <a class="btns" href="/squad/new/{{id}}">Add To Squad</a>

                        </div>
                    </div>
                {{/each}}
            </div>
            <h2>
                <a href="/squad_form"> BUild Your Squad</a>
                <br>
    {{#if squad}}
        Available Squads
            </h2>
    {{/each squad}}
            <div class = "squad-container">
                <img src="" alt="">
                <div>
                    <h1>{{ squadName }}</h1>
                    <p>{{ squadId}}</p>
                    <p>{{ squadQuanity }}</p>
                    <p>{{squadReason}}</p>
                </div>

            </div>
        </div>

    </section>
{{/partial}}
{{#partial "footer"}}
    <script type="text/javascript" src="public/js/jquery-3.4.0.min.js"></script>
    <script type="text/javascript" src="public/js/script.js"></script>
{{/partial}}
{{> nav.hbs}}